# AI-Horizon Ed Environment Configuration
# Copy this file to .env and configure your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
PORT=9000

# Database Configuration
DATABASE_URL=sqlite:///data/aih_edu.db

# Main AI-Horizon Platform Integration
MAIN_PLATFORM_DB_URL=sqlite:///data/content.db
MAIN_PLATFORM_HOST=http://localhost:8000
SYNC_INTERVAL_HOURS=6

# YouTube Data API
YOUTUBE_API_KEY=your-youtube-api-key-here

# GitHub API (for tools and software discovery)
GITHUB_API_KEY=your-github-api-key-here

# Optional: Course Platform APIs
COURSERA_API_KEY=your-coursera-key
UDEMY_API_KEY=your-udemy-key

# Content Discovery Configuration
MAX_SEARCH_RESULTS=50
MIN_CONTENT_QUALITY=0.7
SEARCH_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/aih_edu.log 